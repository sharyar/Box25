<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="materialButtonStyle">@style/MaterialButtonCustomStyle</item>
    </style>

    <style name="SignUpActivityCustomTheme" parent="generalNoTitle">

        <item name="android:windowBackground">@color/dark_blue</item>
    </style>

    <style name="MaterialButtonCustomStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/sea_green</item>
    </style>

<!--    Custom Text Styles-->
    <style name="onboarding_title">
        <item name="android:textColor">@color/sea_green</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="onboarding_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/slate_grey</item>
    </style>



<!--    Style with no title bar-->
    <style name="generalNoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>



</resources>